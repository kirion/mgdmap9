<div class="container-fluid">
	 <div class="jumbotron">
		<div class="row">
		 
		  <aside class="col-md-2">
		    <section>
		      <h3>
		        <%= @event.name %>
		      </h3>
		    </section>
		    <section>
		       <%= render 'shared/eventstats'  %>
		    </section>
		  </aside>
		
		  <div class="col-md-7">
		  	<h3> События </h3>
		
		  </div>
		   
		  <div class="col-md-3">
			<%= link_to "Изменить параметры события", edit_event_path, class: "btn btn-warning" %>
			<br>
			<%= link_to "Удалить информацию о событии", event_path(@event), method: :delete, data: { confirm: "Вы уверены?" }, class: "btn btn-danger"  %> 
			<br>
			<%= link_to "Добавить событие", new_event_path, class: "btn btn-primary" %>
			<br>
			<%= link_to "Добавить новый дом", new_house_path, class: "btn btn-success" %>
		  </div>
		  
		</div>		
	</div>
</div>
