
<div class="container-fluid">
	 <div class="jumbotron">
	 	<div class="row">
			<%= form_tag houses_path, :method => 'get' do %>
			  	<div class="col-md-3">
			  		<%= link_to "Добавить новый дом", new_house_path %>
			  		<div class=field>
					   	<%= label_tag "Введите адрес для поиска"%>
					    <%= text_field_tag :search, params[:search] %>
			    	</div> 
					
			    </div>
			    <div class="col-md-6">
			    	<br>
			    	<%= submit_tag "Поиск", class: "btn btn-success", :name => nil %>
			    </div> 
			<% end %>
		 </div> 
		
		<div class="row">
		<br>
		<ul>
		<% for house in @houses %>
			<li>
				<b><%= link_to house.name, house_path(house) %></b>
				| <%= link_to "Изменить", edit_house_path(house) %>
				| <%= link_to "Удалить", house_path(house), method: :delete, data: { confirm: "Вы уверены?" } %> 
			</li>
		<% end %>
		</ul>
		</div>
	</div>
</div>

